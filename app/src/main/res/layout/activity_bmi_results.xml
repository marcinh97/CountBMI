<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bmi_results_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/seigaiha_repeating"
    tools:context="com.example.marcin.bmi_app.BmiResultsActivity">

    <include
        android:id="@+id/app_bar_bmi_results"
        layout="@layout/app_bar_bmi_results" />

    <TextView
        android:id="@+id/bmi_results_text_view"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_bar_bmi_results"
        app:layout_constraintVertical_bias="0.496" />

    <TextView
        android:id="@+id/title_bmi_results_text_view"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/actor"
        android:gravity="center"
        android:text="@string/bmi_results"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/bmi_results_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>
